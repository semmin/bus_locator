<%= form_for report, :url => { :controller => "reports", :action => "create" }, method: "post" do |f| %>
  <%= f.label :route_id, "Route Number" %>
  <%= f.text_field :route_id %>
  <%= f.label :comment, "Comments" %>
  <%= f.text_area :comment %>
  <%= f.hidden_field :lat %>
  <%= f.hidden_field :lon %>
  <%= f.submit "Create" %>
<% end %>